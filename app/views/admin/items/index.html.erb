<body>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>商品一覧</h3>
      <div>
        <a class="nav-link text-light" href="/admin/items/new">
          <i class="fa-duotone fa-circle-plus"></i>
        </a>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th></th>
          <th>ステータス</th>
         </tr>
        </thead>
        <tbody>
          <% @item.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
            <td></td>
          </tr>
          <% end %>
          <%= paginate @item %>
        </tbody>
      </table>
    </div>
  </div>
</body>