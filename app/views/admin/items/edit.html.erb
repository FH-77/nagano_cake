<div class="container">
  <h3>商品編集</h3>
  <div class="position-relative">
<%= form_with model: @item, url: admin_item_path(@item) do |f| %>
  <p>商品画像
   <%= f.file_field :image,accept: "image/*" %></p>
  <p>商品名
   <%= f.text_field :name,placeholder: "商品名" %></p>
  <p>商品説明</
   <%= f.text_area :introduction,placeholder: "ここに説明文を記述します" %></p>
  <p>ジャンル
   <%= f.collection_select :genre_id, Genre.all, :id, :name,{include_blank: '--選択してください--'} %></p>
  <p>税抜価格
   <%= f.text_field :price,placeholder: "1000" %>円</p>
  <p>販売ステータス
   <%= f.radio_button :is_active, true %>
   <%= f.label :is_active, "販売中" %>
   <%= f.radio_button :is_active, false %>
   <%= f.label :is_active, "販売停止中" %></p>
   <div><%= f.submit "変更を保存",class:"btn btn-success btn-sm position-absolute translate-middle" %></div>
   </div>
<% end %>
</div>