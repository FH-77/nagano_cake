<body>
   <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>注文履歴一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
         </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
          <tr>
            <td>
             <%= link_to admin_order_path(order.id),class:"Editlink" do %>
              <%= order.created_at.to_s(:created_at) %>
             <% end %>
            </td>
            <td><%= order.shipping_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</body>