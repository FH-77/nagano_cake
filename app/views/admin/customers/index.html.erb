<body>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>会員一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
         </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.last_name %><%= customer.first_name %></td>
            <td><%= customer.email %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
          <%= paginate @customer %>
        </tbody>
      </table>
    </div>
  </div>
</body>