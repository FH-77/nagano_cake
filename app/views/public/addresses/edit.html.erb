<h3>配送先編集</h3>
<%= form_with model: @address do |f| %>
<p>
 <label for="inputName">郵便番号（ハイフンなし）</label>
 <%= f.text_field :postal_code %>
</p>
<p>
 <label for="inputName">住所</label>
 <%= f.text_field :address %>
</p>
<p>
 <label for="inputName">宛名</label>
 <%= f.text_field :name %>
 <%= f.submit "変更内容を保存",class:"btn btn-success btn-sm" %>
</p>
<% end %>
