<body>
 <div class="container">
  <h4 class="pt-3">配送先登録/一覧</h4>
  <%= form_with model: @address do |f| %>
   <p>
     <label for="inputName">郵便番号（ハイフンなし）</label>
     <%= f.text_field :postal_code,placeholder: "0000000" %>
   </p>
   <p>
     <label for="inputName">住所</label>
     <%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町０−０" %>
   </p>
   <p>
     <label for="inputName">宛名</label>
     <%= f.text_field :name,placeholder: "令和道子" %>
   </p>
   <%= f.submit "新規投録",class:"btn btn-success btn-sm" %>
  <% end %>

  <table class='table table-bordered border-dark'>
    <tr class="table-secondary">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  <% @alladdress.each do |address| %>
    <tr>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td>
        <%= link_to "編集する",edit_address_path(address.id),class:"btn btn-success btn-sm" %>
        <%= link_to "削除する",address_path(address.id), method: :delete,class:"btn btn-danger btn-sm" %>
       </td>
     </tr>
  <% end %>
  </table>
 </div>
</body>