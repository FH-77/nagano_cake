<body>
 <div class="container">
  <h3 class="pt-3">注文履歴詳細</h3>
  <h6 class="pt-3">注文情報</h6>
   <div class="col-4">
    <table class="table table-bordered border-dark">
     <tr>
      <th class="table-secondary">注文日</th>
      <td><%= @order.created_at %></td>
     </tr>
     <tr>
      <th class="table-secondary">配送先</th>
      <td>
       <%= @order.shipping_postal_code %><br/>
       <%= @order.shipping_address %><br/>
       <%= @order.shipping_name %>
      </td>
     </tr>
     <tr>
      <th class="table-secondary">支払方法</th>
      <td><%= @order.payment_method %></td>
     </tr>
     <tr>
      <th class="table-secondary">ステータス</th>
      <td><%= @order.order_status %></td>
     </tr>
    </table>
   </div>
 
   <h6 class="pt-3">請求情報</h6>
    <div class="col-3">
     <table class="table table-bordered border-dark">
      <tr>
       <th class="table-secondary">商品合計</th>
       <td><%= @order.payment-@order.postage %></td>
      </tr>
      <tr>
       <th class="table-secondary">配送料</th>
       <td><%= @order.postage %></td>
      </tr>
      <tr>
       <th class="table-secondary">ご請求額</th>
       <td><%= @order.payment %></td>
      </tr>
     </table>
   </div>
  
   <table class='table table-bordered border-dark'>
    <tr class="table-secondary">
     <th>商品名</th>
     <th>単価(税込)</th>
     <th>数量</th>
     <th>小計</th>
    </tr>
    <% total = 0 %>
    <% @order.order_details.each do |order| %>
    <tr>
     <td>
       <%= order.item.name %>
     </td>
     <td><%= (order.item.price*1.1).to_i %></td>
     <td><%= order.amount %></td>
     <td>
      <% subtotal = ((order.item.price*order.amount)*1.1).to_i %>
      <%= subtotal %>
     </td>
    </tr>
      <% total += (order.item.price*order.amount)*1.1 %>
    <% end %>
   </table>
  </div>
</body>